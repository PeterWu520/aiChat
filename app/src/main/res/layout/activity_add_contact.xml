<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="#00acff"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加联系人"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/add_find"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="查找"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginRight="10dp" />
    </RelativeLayout>

    <!--<EditText-->
        <!--android:id="@+id/search_username"-->
        <!--android:layout_margin="10dp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:singleLine="true"/>-->

    <EditText
        android:id="@+id/search_username"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:background="@drawable/et_background"
        android:hint="请输入用户名"
        android:padding="10dp"
        android:singleLine="true"
        android:textSize="18sp"
        android:layout_margin="10dp" />

    <RelativeLayout
        android:id="@+id/rl_add"
        android:visibility="gone"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/add_userphoto"
            android:src="@drawable/em_default_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/add_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名称"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/add_userphoto"
            android:layout_marginLeft="10dp"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/bt_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</LinearLayout>